<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Store Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #1b2838;
            color: #c6d4df;
        }
        .table {
            color: #c6d4df;
            background-color: #2a475e;
        }
        .table th {
            background-color: #171a21;
            color: #fff;
        }
        .table td {
            vertical-align: middle;
        }
        .btn-primary {
            background-color: #66c0f4;
            border-color: #66c0f4;
        }
        .btn-primary:hover {
            background-color: #1b2838;
            border-color: #66c0f4;
        }
        .btn-danger {
            background-color: #cc3d3d;
            border-color: #cc3d3d;
        }
        .game-img {
            width: 120px;
            height: 45px;
            object-fit: cover;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Game Store Management</h2>
            <a href="/games/add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Game
            </a>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                   
                    <% games.forEach(game => { %>
                        <tr>
                            <td>
                                <img src="<%= game.imageurl %>" alt="<%= game.name %>" class="game-img">
                            </td>
                            <td><%= game.name %></td>
                            <td>Rp. <%= game.price.toLocaleString() %></td>
                            <td><%= game.Category ? game.Category.name : 'N/A' %></td>
                            <td>
                                <a href="/games/edit/<%= game.id %>" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/games/delete/<%= game.id %>" 
                                class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this game?')">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
